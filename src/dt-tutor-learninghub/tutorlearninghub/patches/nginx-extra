# Learninghub service
upstream dt_learninghub-backend {
    server dt_learninghub:8000 fail_timeout=0;
}
server {
  listen 80;
  server_name {{ DT_LEARNINGHUB_HOST }};

  # Disables server version feedback on pages and in headers
  server_tokens off;

  client_max_body_size 10m;

  location / {
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://dt_learninghub-backend;
  }
}