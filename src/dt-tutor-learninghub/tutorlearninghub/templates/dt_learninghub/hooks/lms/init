# Modify users created with an incorrect email and that might clash with the newly created users
./manage.py lms shell -c \
    "from django.contrib.auth import get_user_model;\
    get_user_model().objects.filter(username='classroom').exclude(email='classroom@openedx').update(email='classroom@openedx')"

./manage.py lms manage_user classroom classroom@openedx --staff --superuser --unusable-password

# Development client
./manage.py lms create_dot_application \
    --grant-type client-credentials \
    --redirect-uris "{% if ENABLE_HTTPS %}https{% else %}http{% endif %}://{{ DT_CLASSROOM_HOST }}:8180/complete/edx-oauth2/" \
    --client-id {{ DT_CLASSROOM_OAUTH2_KEY_DEV }} \
    --client-secret {{ DT_CLASSROOM_OAUTH2_SECRET }} \
    --scopes "user_id,email,profile" \
    --skip-authorization \
    --update \
    classroom-dev \
    classroom
./manage.py lms create_dot_application \
    --grant-type authorization-code \
    --redirect-uris "http://{{ DT_CLASSROOM_HOST }}:8180/complete/edx-oauth2/" \
    --client-id {{ DT_CLASSROOM_OAUTH2_KEY_SSO_DEV }} \
    --client-secret {{ DT_CLASSROOM_OAUTH2_SECRET_SSO }} \
    --scopes "user_id,email,profile" \
    --skip-authorization \
    --update \
    classroom-sso-dev \
    classroom

# Production client
./manage.py lms create_dot_application \
    --grant-type client-credentials \
    --redirect-uris "{% if ENABLE_HTTPS %}https{% else %}http{% endif %}://{{ DT_CLASSROOM_HOST }}/complete/edx-oauth2/" \
    --client-id {{ DT_CLASSROOM_OAUTH2_KEY }} \
    --client-secret {{ DT_CLASSROOM_OAUTH2_SECRET }} \
    --scopes "user_id,email,profile" \
    --skip-authorization \
    --update \
    classroom \
    classroom
./manage.py lms create_dot_application \
    --grant-type authorization-code \
    --redirect-uris "{% if ENABLE_HTTPS %}https{% else %}http{% endif %}://{{ DT_CLASSROOM_HOST }}/complete/edx-oauth2/" \
    --client-id {{ DT_CLASSROOM_OAUTH2_KEY_SSO }} \
    --client-secret {{ DT_CLASSROOM_OAUTH2_SECRET_SSO }} \
    --scopes "user_id,email,profile" \
    --skip-authorization \
    --update \
    classroom-sso \
    classroom